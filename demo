# try:
# Display program purpose
print("This application calculates and checks the elevation of differential survey data.")
print()
print('************************************************************') 
print()

table_data = {'backsight' : 0, 'heightofinstrument' : 0, 'foresight' : 0, 'elevation': 0}
level = input("Enter the elevation of benchmark: ")
#Using indefinite Lop
while True:
    backsight = input("Enter the backsight reading: ")
    table_data[backsight] += 1

    foresight = input("Enter the foresight reading: ")
    table_data[foresight] += 1

    heightofinstrument = level + backsight
    table_data[heightofinstrument] += 1

    elevation = heightofinstrument - foresight
    table_data[elevation] += 1

    answer = input("Do you want to enter another station? (Y/N)")
    answer = answer.upper()
    if answer == "N":
        break

        
# #Except specific Exception
# #General Exception
# except Exception as message:
#     print("Error: "+ message)
